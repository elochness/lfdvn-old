{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
	<div class="box article-large">
		{{ form_start(form) }}
		
		<fieldset>
        	<legend><i class="fa fa-lock"></i> {{ 'title.create_user'|trans }}</legend>
        <div class="form-group">
            {{ form_label(form.lastname) }}
            {{ form_errors(form.lastname) }}
			{{ form_widget(form.lastname, { 'attr': {'class': 'form-control'} }) }}
		</div>
        <div class="form-group">
            {{ form_label(form.firstname) }}
            {{ form_errors(form.firstname) }}
			{{ form_widget(form.firstname, { 'attr': {'class': 'form-control'} }) }}
		</div>
		<div class="form-group">
            {{ form_label(form.cellphone) }}
            {{ form_errors(form.cellphone) }}
			{{ form_widget(form.cellphone, { 'attr': {'class': 'form-control'} }) }}
		</div>
		<div class="form-group">
            {{ form_label(form.email) }}
            {{ form_errors(form.email) }}
			{{ form_widget(form.email, { 'attr': {'class': 'form-control'} }) }}
		</div>
		<div class="form-group">
            {{ form_label(form.username) }}
            {{ form_errors(form.username) }}
			{{ form_widget(form.username, { 'attr': {'class': 'form-control'} }) }}
		</div>
		<div class="form-group">
            {{ form_label(form.password) }}
            {{ form_errors(form.password) }}
			{{ form_widget(form.password, { 'attr': {'class': 'form-control'} }) }}
		</div>
		<button type="submit" class="btn btn-primary">
	        <i class="fa fa-sign-in"></i> {{ 'action.create'|trans }}
	    </button>
		</fieldset>
		
		{{ form_end(form) }}
	</div>

{% endblock %}

{% block sidebar %}

{% endblock %}


