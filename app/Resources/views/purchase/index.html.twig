{% extends 'base.html.twig' %}

{% block body_id '_index' %}

{% block main %}
     
    <h1>
    
    {% if categories|length > 0 %}
        <form>
        {% for category in categories %}
            <h2>{{ category.name }}</h2>
                                     
            {% for product in category.products %}
                <ul class="purchase-list">
                    <li class="name">{{ product.name }}</li>
                    <li><span  id="pu-{{ loop.parent.loop.index}}-{{ loop.index }}">{{ product.price }}</span> â‚¬</li>
                    <li><input id="qte-{{ loop.parent.loop.index}}-{{ loop.index }}" type="number" min="0" max="50" /></li>
                    <li><span  id="total-{{ loop.parent.loop.index}}-{{ loop.index }}" /></li>
                </ul>
            {% endfor %}
        {% endfor %}
        </form>
    {% else %}
        <div class="well">{{ 'product.no_found'|trans }}</div>
    {% endif %}

{% endblock %}

{% block sidebar %}
    <ul class="list_style_none">
      {% for category in categories %}
          <li>
            <a href="{{ path('product_category', { cid: category.id }) }}">{{ category.name }}</a>
          </li>
      {% endfor %}
    </ul>

    {{ parent() }}

{% endblock %}
